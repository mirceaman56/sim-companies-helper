{
  "manifest_version": 3,
  "name": "Sim Companies ROI Helper",
  "version": "0.1.0",
  "description": "Shows ROI/hr scoring next to product sell controls in Sim Companies.",
  "host_permissions": ["https://www.simcompanies.com/*"],
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.simcompanies.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
